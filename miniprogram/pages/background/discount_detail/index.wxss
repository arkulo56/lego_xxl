.content
{
  display: flex;
  flex-direction: column;
  background-color: whitesmoke;
  font-size: 15px;
  color: darkslategrey;
}

.content-title
{
  display: flex;
  flex-direction: column;
}
.title
{
  display: flex;
  justify-content: center;
  font-size: 20px;
  margin: 10px 20px;
  font-weight: bold;
}
.publishTime
{
  margin: 2px 18px;
}

.adv
{
  display: flex;
  justify-content: center;
}

.content-detail
{
  display: inline;
  padding: 0 20px;
  text-align: justify;
}