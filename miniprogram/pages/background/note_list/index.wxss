/*头部*/
.list-header
{
  display: flex;
  flex-direction: row;
  align-items: center;
  color: darkslategrey;
  background-color: whitesmoke;
  height: 45px;
}
.list-select
{
  /*background-color:antiquewhite;*/
  font-size: 15px;
  padding-left: 15px;
  display: flex;
  flex-direction: row;
}
.list-ison
{
  /*background-color:aquamarine;*/
  display: flex;
  flex-grow: 2;
  justify-content: flex-end;
  align-items: center;
  padding-right: 15px;
}

/*列表*/
.list-item
{
  display: flex;
  background-color:whitesmoke;
  flex-direction: row;  
  padding: 5px 5px;
  margin: 5px 0;
}

/*左侧部分*/
.item-img
{
  display: flex;
  align-items: center;
  margin: 5px;
}
.img_detail
{
  width: 150rpx;
  height: 266rpx;
}

/*中间部分*/
.item-content
{
  /*background-color:bisque;*/
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size:12px;
  color:darkslategrey;
  width: 100%
}
.content_title
{
  display: flex;
  color:black;
  font-size: 18px;
}

/*底部*/
.item-button
{
  /*background-color:aqua;*/
  display: flex;
  flex-grow: 2;
  flex-direction: row;
  align-items: flex-end;
  padding-bottom: 2px;
  width: 100%
}
.option
{
  /*background-color:brown;*/
  display: flex;
  flex-direction: row-reverse;
  flex-grow: 2;
  
}
.option_button
{
  width: 60px;
  font-size: 12px;
  margin: 0 2px;
}

.ntf
{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 15px;
  color:darkgray;
}