/* pages/background/scratch_note_add/index.wxss */
.header
{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 40rpx;
  color: darkslategray;
}
.header-text
{
  width: 720rpx;
  background-color: rgb(239, 243, 219);
  display: flex;
  flex-direction: row;
  justify-content: center;
}

/*表单部分样式*/
.formTable
{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
  padding: 15rpx;
}
.formItem
{
  display: flex;
  flex-direction: row;
  background-color: rgb(239, 243, 219);
  color: darkslategray;
  font-size: 35rpx;
  margin-bottom: 10rpx;
  width: 700rpx;  /*同时设置width和padding时，他们加起来才等于750rpx，还要考虑到上一级的padding*/
  padding: 10rpx;
}
/*表单中的input*/
.fromItem-input
{
  margin-left: 20rpx;
  width: 500rpx;
  background-color: ghostwhite;
}

/*表单中的picker*/
.form-picker
{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: cornflowerblue;
}

/*提交按钮*/
.form-item-button
{
  width: 700rpx;
}