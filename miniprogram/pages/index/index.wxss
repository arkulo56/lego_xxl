#note_id{
  margin-top: 5px;
  color: red;
}

.background_inter
{
  position: fixed;
  bottom: 2px;
  right: 5px;
  z-index: 99;
  width: 80px;
}


/* 这里开始是列表的样式 */
/*列表*/
.list-item
{
  display: flex;
  background-color:white;
  flex-direction: row;  
  padding: 5px 5px;
  margin: 5px 0;
}

/*左侧部分*/
.item-img
{
  display: flex;
  align-items: center;
  margin: 5px;
}
.img_detail
{
  width: 150rpx;
  height: 266rpx;
}

/*中间部分*/
.item-content
{
  /*background-color:bisque;*/
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size:12px;
  color:darkslategrey;
  width: 100%
}
.content_title
{
  display: flex;
  color:black;
  font-size: 18px;
}

/*底部*/
.item-button
{
  /*background-color:aqua;*/
  display: flex;
  flex-grow: 2;
  flex-direction: row-reverse;
  align-items: flex-end;
  padding-bottom: 2px;
  width: 100%
}
.option
{
  /*background-color:brown;*/
  display: flex;
  flex-direction: row-reverse;
  flex-grow: 2;
  padding-right: 5px;
  
}
.option_button
{
  width: 60px;
  font-size: 12px;
  margin: 0 2px;
}


