<!--pages/sign_up_scratch/index.wxml-->
<view class="title">
  <text>学员信息填报表</text>
  <text class="info">注：该信息是为满足创建学习账号及相关教学活动所用，不涉及财务及个人隐私信息，请放心填写。</text>
</view>

<form bindsubmit='formSubmit' bindreset='formReset'>
<view class="formStyle">
  <view class="one_input"> 
    <text class="input-name">> 姓名</text>
    <input  placeholder=""  class="input-placeholder" name="student_name" /> 
  </view>
  
  <view class="one_input"> 
    <text class="input-name">> 年龄(岁)</text>
    <input  placeholder="" type="number"  class="input-placeholder" name="student_age" /> 
  </view>

  <view class="one_input"> 
    <text class="input-name">> 联系电话（手机号）</text>
    <input  placeholder="" type="number" class="input-placeholder" name="student_phone" /> 
  </view>

  <view class="one_input"> 
    <text class="input-name">> 居住城市（例如：北京市）</text>
    <input  placeholder="北京市" value="北京市" class="input-placeholder" name="student_city" /> 
  </view>

  <view class="one_input"> 
    <text class="input-name">> 居住城区（例如：海淀区）</text>
    <input  placeholder="海淀区" value="海淀区"  class="input-placeholder" name="student_area" /> 
  </view>

  <view class="one_input"> 
    <text class="input-name">> 学习编程时间（月）</text>
    <input  placeholder="12" value="12" type="number" class="input-placeholder" name="student_codetime" /> 
  </view>

  <view class="one_input"> 
    <button type="default" form-type="submit">提    交</button>
  </view>
</view>
</form>
<van-dialog id="van-dialog" />