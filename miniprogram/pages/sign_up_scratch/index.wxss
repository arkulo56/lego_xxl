.title
{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fffef9;
  font-size: 30px;
  font-weight: bold;
  color: #336699;
  padding: 20px;
}

.info
{
  display: flex;
  font-size: 12px;
  color: darkslategray;
  margin-top: 20px;
}

.formStyle
{
  display: flex;
  flex-direction: column;
  margin-top: 20px;
  background-color: #fffef9;
  
}
.one_input
{
  padding: 5px;
}

.input-name
{
  color: darkslategray;
  font-size: small;
}
.input-placeholder 
{  
  display: block; /*input是行级元素，不是块级元素，如果要设置高度，就得设置为块级单位才可以*/
  color: darkgray; 
  font-size:35rpx;
  height: 40px;   /*输入框高度*/
  background-color: white;
  outline-style: none ;     /*和下面这句配合实现边框颜色*/
  border: 1px solid #ccc;  
}